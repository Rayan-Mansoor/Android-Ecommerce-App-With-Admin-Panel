        <activity
            android:name=".Activities.EditSliderActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.ManagePromoCodesActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.ManageInventoryActivity"
