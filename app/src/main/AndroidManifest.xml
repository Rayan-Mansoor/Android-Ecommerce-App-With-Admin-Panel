            android:name=".Activities.MyOrdersActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.SendPromoCodeActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.GeneratePromoCodeActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.AdminActivity"
            android:exported="false" />
